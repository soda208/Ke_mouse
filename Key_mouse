using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Text;
using System.Windows.Forms;

namespace Key_Mouse
{
    public partial class Form2 : Form
    {
        public Form2()
        {
            InitializeComponent();
        }

        bool dragging = false;
        Point startPoint;

        private void Form2_MouseMove(object sender, MouseEventArgs e)
        {
            label1.Text = $"ตำแหน่ง X={e.X}, Y={e.Y}";

            if (e.X == e.Y)
            {
                MessageBox.Show($"เมาส์ตรงแล้ว X={e.X}, Y={e.Y}");
            }
        }

        private void Form2_MouseClick(object sender, MouseEventArgs e)
        {
            if (e.Button == MouseButtons.Left)
            {
                using (Graphics g = this.CreateGraphics())
                {
                    Font drawFont = new Font("Arial", 20, FontStyle.Bold);
                    SolidBrush drawBrush = new SolidBrush(Color.Red);

                    g.DrawString("X", drawFont, drawBrush, e.X - 10, e.Y - 10);
                }
            }

            else if (e.Button == MouseButtons.Right)
            {
                using (Graphics g = this.CreateGraphics())
                {
                    Font drawFont = new Font("Arial", 20, FontStyle.Bold);
                    SolidBrush drawBrush = new SolidBrush(Color.Red);

                    g.DrawString("O", drawFont, drawBrush, e.X - 10, e.Y - 10);
                }
            }
        }

        private void btnTest_MouseEnter(object sender, EventArgs e)
        {
            btnTest.BackColor = Color.Yellow;
        }

        private void btnTest_MouseLeave(object sender, EventArgs e)
        {
            btnTest.BackColor = SystemColors.Control;
        }

        private void txtSource_MouseDown(object sender, MouseEventArgs e)
        {
            if (!string.IsNullOrEmpty(txtSource.Text))
            {
                txtSource.DoDragDrop(txtSource.Text, DragDropEffects.Copy);
            }
        }

        private void lblTraget_DragEnter(object sender, DragEventArgs e)
        {
            if (e.Data.GetDataPresent(DataFormats.Text))
            {
                e.Effect = DragDropEffects.Copy;
            }
        }

        private void lblTraget_DragDrop(object sender, DragEventArgs e)
        {
            lblTraget.Text = e.Data.GetData(DataFormats.Text).ToString();
        }

        private void btnMove_MouseDown(object sender, MouseEventArgs e)
        {
            dragging = true;
            startPoint = e.Location;
        }

        private void btnMove_MouseMove(object sender, MouseEventArgs e)
        {
            if (dragging)
            {
                btnMove.Left += e.X - startPoint.X;
                btnMove.Top += e.Y - startPoint.Y;
            }
        }

        private void btnMove_MouseUp(object sender, MouseEventArgs e)
        {
            dragging = false;
        }
    }
}
